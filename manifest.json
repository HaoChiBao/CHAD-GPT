{
    "manifest_version": 3,
    "name": "ChatGPT Accessible",
    "description": "A faster way to use ChatGPT",
    "version": "0.0.1",
    
    "permissions": [
        "scripting",
        "activeTab",
        "notifications",
        "alarms",
        "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources":[{
        "resources": ["/app/*"],
        "matches": ["<all_urls>"]
    }],
    "action": {
        "default_popup": "./app/index.html"
    }
}